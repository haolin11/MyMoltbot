# 服务器配置
PORT=3000
NODE_ENV=development

# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=casepilot

# 通义千问API配置（必填）
# 获取方式：访问 https://dashscope.console.aliyun.com/ 注册并获取API Key
DASHSCOPE_API_KEY=your_dashscope_api_key
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# Chroma向量数据库配置
CHROMA_HOST=localhost
CHROMA_PORT=8000

# 向量检索相似度阈值配置（0-1之间的浮点数）
# 默认相似度阈值，用于RAG检索等主要场景
VECTOR_MIN_SCORE=0.5
# 宽松相似度阈值，用于关键词检索等需要更多结果的场景
VECTOR_RELAXED_MIN_SCORE=0.3
# 严格相似度阈值，用于需要高精度匹配的场景
VECTOR_STRICT_MIN_SCORE=0.7
# 默认检索数量
VECTOR_DEFAULT_TOP_K=5

# 文件上传配置
UPLOAD_DIR=./uploads
DATABASE_DIR=../database

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 相关性阈值
# 默认相似度阈值（用于RAG检索）
VECTOR_MIN_SCORE=0.5

# 宽松相似度阈值（用于关键词检索）
VECTOR_RELAXED_MIN_SCORE=0.4

# 严格相似度阈值（用于高精度检索）
VECTOR_STRICT_MIN_SCORE=0.7

# 默认检索数量
VECTOR_DEFAULT_TOP_K=6